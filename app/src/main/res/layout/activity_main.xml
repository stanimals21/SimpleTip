<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/total_cost_value"
        style="@style/header_value_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/total_cost_info"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$1234.33" />

    <TextView
        android:id="@+id/per_person_info"
        style="@style/header_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/header_text_padding"
        android:textSize="@dimen/header_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/per_person_info_text" />

    <TextView
        android:id="@+id/per_person_value"
        style="@style/header_value_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/headerVal_textSize"
        app:layout_constraintBaseline_toBaselineOf="@+id/per_person_info"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$1234.44" />

    <TextView
        android:id="@+id/total_cost_info"
        style="@style/header_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="@dimen/header_text_padding"
        android:text="@string/total_cost_info_text"
        android:textSize="@dimen/header_textSize"
        app:layout_constraintEnd_toEndOf="@+id/per_person_info"
        app:layout_constraintStart_toStartOf="@+id/per_person_info"
        app:layout_constraintTop_toBottomOf="@+id/per_person_info" />


</androidx.constraintlayout.widget.ConstraintLayout>