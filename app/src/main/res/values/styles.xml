<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header_style">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/header_textSize</item>
        <item name="android:padding">@dimen/header_text_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_value" parent="header_style">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#4CAF50</item>
    </style>


</resources>