<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>

    <style name="header_style">
        <item name="android:textSize">@dimen/header_textSize</item>
        <item name="android:padding">@dimen/header_text_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_value_style" parent="header_style">
        <item name ="android:textSize">@dimen/headerVal_textSize</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:maxLength">8</item>
    </style>

    <style name="editText_style">
        <item name ="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>